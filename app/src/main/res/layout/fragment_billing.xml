<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.viettel.mbccs.widget.CustomTextView
            style="@style/ItemBilling"
            android:text="@string/msg_date_create_trans"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <com.viettel.mbccs.widget.CustomDatePicker
                android:id="@+id/dp_from_date"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.viettel.mbccs.widget.CustomDatePicker
                android:id="@+id/dp_to_date"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.viettel.mbccs.widget.CustomTextView
            style="@style/ItemBilling"
            android:text="@string/msg_default_choose_time_trans"
            android:textSize="@dimen/sp_14" />

        <com.viettel.mbccs.widget.CustomTextView
            style="@style/ItemBilling"
            android:text="@string/title_channel"
            android:textSize="@dimen/sp_14" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.viettel.mbccs.widget.CustomTextView
            style="@style/ItemBilling"
            android:text="@string/msg_choose_transaction"
            android:textSize="@dimen/sp_14" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.viettel.mbccs.widget.ButtonIconView
            android:id="@+id/bt_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_header"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            app:itb_bg="@color/blue"
            app:itb_bg_pressed="@color/blue_trans"
            app:itb_padding_left="@dimen/dp_50"
            app:itb_padding_right="@dimen/dp_50"
            app:itb_radius="3dp"
            app:itb_text="@string/title_search" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyHeader"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/bg_filter_input"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"
            android:src="@drawable/ic_search" />

        <com.viettel.mbccs.widget.CustomEdittext
            android:id="@+id/text_filer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:lines="1"
            android:maxLines="1"
            android:padding="@dimen/dp_3" />
    </LinearLayout>

    <com.viettel.mbccs.widget.ButtonIconView
        android:id="@+id/bt_billing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="center"
        app:itb_bg="@color/blue"
        app:itb_bg_pressed="@color/blue_trans"
        app:itb_padding_left="@dimen/dp_50"
        app:itb_padding_right="@dimen/dp_50"
        app:itb_radius="0dp"
        app:itb_text="@string/billing_title" />

    <LinearLayout
        android:id="@+id/lyFilterCollapse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_billing"
        android:layout_below="@+id/search_text"
        android:background="@color/white"
        android:orientation="vertical">

        <com.viettel.mbccs.widget.CustomTextView
            android:id="@+id/tv_list_trans"
            style="@style/ItemBilling"
            android:text="@string/msg_list_trans"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10" />

    </LinearLayout>

</RelativeLayout>