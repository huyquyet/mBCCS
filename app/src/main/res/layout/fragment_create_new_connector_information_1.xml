<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="presenter"
            type="com.viettel.mbccs.screen.connector.fragment.CreateNewConnectorInformationFragmentPresenter"
            />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical"
        >
        <include
            layout="@layout/toolbar"
            android:id="@+id/toolbar_update_information"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            app:background="@{@color/grey}"
            app:isAllCaps="@{true}"
            app:isShow="@{true}"
            app:leftIcon="@{@drawable/ic_arrow_left_24dp}"
            app:leftIconClick="@{()->presenter.onCancel()}"
            app:title="@{ @string/create_new_connector_information_title }"
            app:titleColor="@{@color/white}"
            app:titleTextSize="@{@dimen/sp_17}"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_6"
                android:layout_weight="1"
                android:background="@color/grey_three"
                android:gravity="center"
                android:text="@string/create_new_connector_information_khach_hang"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_right_grey_24_36dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_weight="1"
                android:background="@drawable/bg_order"
                android:gravity="center"
                android:text="@string/create_new_connector_information_thue_bao"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                >
                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="@string/create_new_connector_information_loai_khach_hang"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_6"
                    android:background="@drawable/bg_order"
                    >

                    <Spinner
                        android:id="@+id/spinner_create_connector_type_customer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        bind:setSpinnerAdapter="@{ presenter.adapterSpinnerTypeCustomer }"
                        />
                </LinearLayout>

                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="@string/create_new_connector_information_ten_khach_hang"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_6"
                    android:background="@drawable/bg_order"
                    android:text="@={ presenter.nameCustomer }"
                    />

                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="@string/create_new_connector_information_ngay_sinh"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    />

                <com.viettel.mbccs.widget.CustomDatePicker
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_6"
                    bind:setDate="@{ presenter.dateBirthday }"
                    />
                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="@string/fragment_create_update_information_create_gioi_tinh"
                    android:textColor="@color/black"
                    />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:checked="@{ presenter.isCheckMale }"
                        android:text="@string/fragment_create_update_information_create_gioi_tinh_nam"
                        />
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:checked="@{ presenter.isCheckFemale }"
                        android:text="@string/fragment_create_update_information_create_gioi_tinh_nu"
                        />
                </RadioGroup>

                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="@string/fragment_create_update_information_create_loai_giay_to"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:background="@drawable/bg_order"
                    >
                    <Spinner
                        android:id="@+id/spinner_select_type_passport"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:adapter="@{ presenter.adapterTypePassport }"
                        bind:setSpinnerSelection="@{ presenter.selectionPassport }"
                        />
                </LinearLayout>

                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="@string/create_new_connector_information_so_giay_to"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_4"
                    android:background="@drawable/bg_order"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@={ presenter.txtNumberPassport }"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:orientation="horizontal"
                    >
                    <com.viettel.mbccs.widget.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/create_new_connector_information_ngay_cap"
                        android:textColor="@color/black"
                        />
                    <com.viettel.mbccs.widget.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/create_new_connector_information_ngay_het_han"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <com.viettel.mbccs.widget.CustomDatePicker
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_weight="1"
                        bind:setDate="@{ presenter.dateCreatePassport }"
                        />
                    <com.viettel.mbccs.widget.CustomDatePicker
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_weight="1"
                        bind:setDate="@{ presenter.outDatePassport }"
                        />
                </LinearLayout>

                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="@string/create_new_connector_information_noi_cap"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_4"
                    android:background="@drawable/bg_order"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@={ presenter.whereCreatePassport }"
                    />

                <com.viettel.mbccs.widget.CustomSelectAddress
                    android:id="@+id/custom_select_address_create_connector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:address="@{ presenter.address }"
                    bind:idDistrict="@{ presenter.idDistrict }"
                    bind:idPrecinct="@{ presenter.idPrecinct }"
                    bind:idProvince="@{ presenter.idProvince }"
                    />
                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="@string/fragment_create_update_information_create_anh_giay_to"
                    android:textColor="@color/black"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_4"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_170"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:id="@+id/image_front"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/dp_4"
                            android:layout_weight="1"
                            android:onClick="@{ v -> presenter.onSelectImage(v) }"
                            android:orientation="vertical"
                            >
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                bind:ignore="NestedWeights"
                                >
                                <ImageView
                                    android:layout_width="@dimen/dp_160"
                                    android:layout_height="match_parent"
                                    bind:imageBitmap="@{ presenter.imageFront }"
                                    />
                            </android.support.v7.widget.CardView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_6"
                                android:gravity="center"
                                android:text="@string/fragment_create_update_information_create_anh_mat_truoc"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/image_backside"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_4"
                            android:layout_weight="1"
                            android:onClick="@{ v -> presenter.onSelectImage(v) }"
                            android:orientation="vertical"
                            >
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                bind:ignore="NestedWeights"
                                >
                                <ImageView
                                    android:layout_width="@dimen/dp_160"
                                    android:layout_height="match_parent"
                                    bind:imageBitmap="@{ presenter.imageBackside }"
                                    />
                            </android.support.v7.widget.CardView>
                            <TextView
                                android:layout_width="@dimen/dp_160"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_6"
                                android:gravity="center"
                                android:text="@string/fragment_create_update_information_create_anh_mat_sau"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/image_portrait"
                        android:layout_width="@dimen/dp_160"
                        android:layout_height="@dimen/dp_160"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:onClick="@{ v -> presenter.onSelectImage(v) }"
                        android:orientation="vertical"
                        >
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:layout_width="@dimen/dp_160"
                                android:layout_height="match_parent"
                                bind:imageBitmap="@{ presenter.imagePortrait }"
                                />
                        </android.support.v7.widget.CardView>
                        <TextView
                            android:layout_width="@dimen/dp_160"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:gravity="center"
                            android:text="@string/fragment_create_update_information_create_anh_chan_dung"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_4"
                        android:paddingRight="@dimen/dp_4"
                        >
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/dp_6"
                            android:layout_weight="1"
                            android:onClick="@{ v -> presenter.onCancel() }"
                            android:text="@string/create_new_connector_information_dong"
                            style="@style/button_nagative"
                            />
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/dp_6"
                            android:layout_weight="1"
                            android:onClick="@{ v -> presenter.onNext() }"
                            android:text="@string/create_new_connector_information_dong"
                            style="@style/button_positive"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
