<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/grey_bright</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <declare-styleable name="SearchInputView">
        <attr format="string" name="text"/>
        <attr format="dimension" name="textSize"/>
        <attr format="color" name="textColor"/>
        <attr format="string" name="inputType"/>
        <attr format="string" name="imeOptions"/>
        <attr format="integer" name="length"/>
        <attr format="integer" name="lines"/>
        <attr format="string" name="hint"/>
    </declare-styleable>

    <style name="button_positive">
        <item name="android:background">@drawable/bg_btn_positive</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:padding">@dimen/dp_4</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/dp_2</item>
    </style>

    <style name="button_negative_red">
        <item name="android:background">@drawable/bg_btn_positive_red</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/dp_2</item>
    </style>

    <style name="button_nagative">
        <item name="android:background">@drawable/bg_btn_nagative</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/dp_2</item>
    </style>

    <style name="button_nagative_grey_seven">
        <item name="android:background">@drawable/bg_btn_nagative_grey_seven</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/dp_2</item>
    </style>

    <style name="button_cancel">
        <item name="android:background">@drawable/bg_btn_cancel</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/dp_2</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="stepTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/dp_5</item>
    </style>

    <style name="IconToolbar">
        <item name="android:layout_width">?android:attr/actionBarSize</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tablayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <!-- Billing -->

    <style name="ItemBilling">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_8</item>
    </style>

    <style name="ItemBillingRecyclerView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_4</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedWidthMinor">90%</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="button_add_subtract">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_add_subtract</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/dp_30</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Style for spinner-->
    <style name="SpinnerStyle" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">@drawable/bg_input_tranparent</item>
    </style>

    <!--Task-->
    <style name="TextSearchTask">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="TextTaskCSKPPDetail">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
        <item name="android:layout_marginRight">@dimen/dp_16</item>
    </style>

    <style name="styleTextHelp">
        <item name="android:minHeight">@dimen/dp_50</item>
        <item name="android:paddingBottom">@dimen/dp_16</item>
        <item name="android:paddingTop">@dimen/dp_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextViewItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/dp_5</item>
    </style>

    <!-- ItemSpinText -->
    <style name="InstallAddressTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemSpinText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_5</item>
    </style>

    <style name="AppThemeStyleDialog" parent="Theme.AppCompat.Light.NoActionBar.FullScreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="inputStyle">
        <item name="android:background">@drawable/bg_input_tranparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:gravity">start|top</item>
    </style>

    <style name="inputStyleIconLeft">
        <item name="android:background">@drawable/bg_transparent_inputview</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:gravity">start|top</item>
    </style>

    <style name="inputStyleTranparent">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:gravity">start|top</item>
    </style>


    <style name="textLablel">
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <!-- Text with icon -->
    <style name="TextWithIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- TextViewAreaItem -->
    <style name="TextViewAreaItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
    </style>

    <style name="AreaItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:background">@drawable/bg_border</item>
    </style>

    <style name="ItemSpinArea">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_1</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="edit_main_bg">
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="dividerHorizontalStyle">
        <item name="android:background">@color/grey_bright</item>
        <item name="android:layout_height">@dimen/dp_0_5</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="dividerVerticalStyle">
        <item name="android:background">@color/grey_bright</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/dp_0_5</item>
    </style>

    <style name="MyRadioCheckbox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/green</item>
        <item name="colorControlActivated">@color/green</item>
    </style>

</resources>
