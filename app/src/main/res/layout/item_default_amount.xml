<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="com.viettel.mbccs.screen.common.payamount.ItemDefaultAmountPresenter" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/alto">
        <RadioButton
            android:id="@+id/rbDefaultAmount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@{presenter.item.title}"
            android:checked="@{presenter.item.selected}"/>
    </LinearLayout>
</layout>
