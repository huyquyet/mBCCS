<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="presenter"
            type="com.viettel.mbccs.screen.nhapkhocapduoi.createorder.CreateOrderSuccessActivity"
            />

        <import type="android.view.View"/>
        <import type="android.text.TextUtils"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dp_8"
        >

        <include
            layout="@layout/toolbar"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:background="@{ @android:color/darker_gray }"
            app:isShow="@{ true }"
            app:leftIcon="@{ @drawable/ic_arrow_left_24dp }"
            app:leftIconClick="@{ () -> presenter.onBackPressed() }"
            app:title="@{ presenter.toolbarTitle }"
            app:titleColor="@{ @color/white }"
            app:titleTextSize="@{ @dimen/sp_18 }"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_button"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical"
            >

            <com.viettel.mbccs.widget.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@{ presenter.orderCode }"
                android:textColor="@{ presenter.screenTypeSuccess ? @color/green : @color/black }"
                android:textSize="@dimen/sp_14"
                />

            <com.viettel.mbccs.widget.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@{ @string/activity_create_order_success_kho_xuat(presenter.exportWarehouseCode) }"
                style="@style/TextSearchTask"
                />

            <com.viettel.mbccs.widget.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@{ @string/activity_create_order_success_kho_nhan(presenter.importWarehouseCode) }"
                android:visibility="@{ TextUtils.isEmpty(presenter.importWarehouseCode) ? View.GONE : View.VISIBLE }"
                style="@style/TextSearchTask"
                />

            <com.viettel.mbccs.widget.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@{ @string/activity_create_order_success_ngay_lap_lenh_xuat_kho(presenter.createdDate) }"
                android:visibility="@{ TextUtils.isEmpty(presenter.createdDate) ? View.GONE : View.VISIBLE }"
                style="@style/TextSearchTask"
                />

            <com.viettel.mbccs.widget.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@{ @string/activity_create_order_success_danh_sach_mat_hang }"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:adapter="@{ presenter.adapter }"
                bind:addItemDecoration="@{ presenter.itemDecoration }"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/dp_16"
            android:orientation="horizontal"
            android:visibility="@{ presenter.screenTypeSuccess ? View.GONE : View.VISIBLE }"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_weight="1"
                android:background="@color/red_button"
                android:onClick="@{ () -> presenter.reject() }"
                android:text="@string/activity_create_order_success_tu_choi"
                android:textColor="@color/white"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_weight="1"
                android:background="@color/blue"
                android:onClick="@{ () -> presenter.create() }"
                android:text="@string/activity_create_order_success_lap_phieu"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dp_16"
            android:background="@drawable/bg_input"
            android:onClick="@{ () -> presenter.onBackPressed() }"
            android:text="@string/common_label_close"
            android:visibility="@{ presenter.screenTypeSuccess ? View.VISIBLE : View.GONE }"
            />

    </RelativeLayout>
</layout>