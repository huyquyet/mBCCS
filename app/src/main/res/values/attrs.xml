<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- InputText -->
    <declare-styleable name="IncDecInputText">
        <attr name="maxLength" format="integer" />
        <attr name="inputTextSize" format="dimension" />
        <attr name="inputTextColor" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="CustomDatePicker">
        <attr name="dateTextSize" format="dimension" />
        <attr name="dateTextColor" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="BottomNavigationView">
        <attr format="color|reference" name="bottomBarBgColor"/>
        <attr format="dimension" name="bottomBarTextSize"/>
        <attr format="reference" name="bottomBarTextColor"/>
    </declare-styleable>
    <declare-styleable name="SimpleProgressChart">
        <attr name="progressTextColor" format="color|reference" />
        <attr name="progressTextSize" format="dimension" />
        <attr name="progressSize" format="dimension" />
        <attr name="progressDone" format="float" />
        <attr name="progressBgColor" format="integer|reference" />
        <attr name="progressColor" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="AppButton">
        <attr name="type" format="string" />
        <attr name="bgColor" format="color" />
        <attr name="bgColorSelected" format="color" />
        <attr name="bgColorDisabled" format="color" />
        <attr name="textSizeButton" format="dimension" />
        <attr name="textColorButton" format="color" />
        <attr name="textColorSelected" format="color" />
        <attr name="textColorDisabled" format="color" />
        <attr name="corner" format="dimension" />
        <attr name="selected" format="boolean" />
        <attr name="cornerStrokeWidth" format="dimension" />
        <attr name="cornerStrokeColor" format="color" />
        <attr name="bgDrawable" format="integer" />
    </declare-styleable>

    <!-- Button Image Custom -->
    <declare-styleable name="ImageTextButton">
        <attr name="itb_icon" format="reference" />
        <attr name="itb_icon_size" format="dimension" />
        <attr name="itb_text" format="string" />
        <attr name="itb_text_color" format="color" />
        <attr name="itb_text_size" format="dimension" />
        <attr name="itb_icon_text_margin" format="dimension" />
        <attr name="itb_icon_position" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="itb_bg" format="color" />
        <attr name="itb_bg_pressed" format="color" />
        <attr name="itb_bg_disabled" format="color" />
        <attr name="itb_radius" format="dimension" />
        <attr name="itb_padding_bottom" format="dimension" />
        <attr name="itb_padding_top" format="dimension" />
        <attr name="itb_padding_right" format="dimension" />
        <attr name="itb_padding_left" format="dimension" />
    </declare-styleable>

    <!-- RangeSliderView Custom -->
    <declare-styleable name="RangeSliderView">
        <attr name="rangeCount" format="integer" />
        <attr name="filledColor" format="color" />
        <attr name="emptyColor" format="color" />
        <attr name="barHeightPercent" format="float" />
        <attr name="slotRadiusPercent" format="float" />
        <attr name="sliderRadiusPercent" format="float" />
    </declare-styleable>

    <!-- Toolbar View style -->
    <declare-styleable name="ToolbarView">
        <attr name="tbTitle" format="string" />
        <attr name="tbColorTitle" format="color" />
        <attr name="ibSizeTitle" format="dimension" />
        <attr name="tbIconLeft" format="reference" />
        <attr name="tbIconRight" format="reference" />
        <attr name="ibIconSize" format="dimension" />
    </declare-styleable>
</resources>