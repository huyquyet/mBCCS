<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="com.viettel.mbccs.base.createorder.BaseCreateOrderSuccessPresenter" />

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_grey"
        android:paddingBottom="@dimen/dp_8">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:background="@{ @color/colorAccent }"
            app:isShow="@{ true }"
            app:leftIcon="@{ @drawable/ic_arrow_left_white_24dp }"
            app:leftIconClick="@{ () -> presenter.onBackPressed() }"
            app:title="@{ presenter.toolbarTitle }"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/button_close"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_dark"
                android:elevation="@dimen/dp_2"
                android:orientation="vertical"
                app:targetApi="lollipop">

                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@{ presenter.orderCode }"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />

                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="@{ presenter.exportWarehouseCode }"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:visibility="@{ TextUtils.isEmpty(presenter.exportWarehouseCode) ? View.GONE : View.VISIBLE }" />

                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="@{ presenter.importWarehouseCode }"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:visibility="@{ TextUtils.isEmpty(presenter.importWarehouseCode) ? View.GONE : View.VISIBLE }" />

                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="@{ presenter.createdDate }"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:visibility="@{ TextUtils.isEmpty(presenter.createdDate) ? View.GONE : View.VISIBLE }" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.6"
                    android:layout_marginTop="@dimen/dp_16" />
            </LinearLayout>

            <com.viettel.mbccs.widget.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                bind:textUnderLine="@{ presenter.itemCountString }" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.6"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/default_bg_disabled" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adapter="@{ presenter.adapter }"
                android:background="@color/white"
                android:paddingEnd="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16"
                bind:addItemDecoration="@{ presenter.itemDecoration }" />
        </LinearLayout>

        <com.viettel.mbccs.widget.CustomButton
            android:id="@+id/button_close"
            style="@style/button_negative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dp_16"
            android:elevation="@dimen/dp_2"
            android:onClick="@{ () -> presenter.onBackPressed() }"
            android:text="@string/common_label_close"
            app:targetApi="lollipop" />

    </RelativeLayout>
</layout>