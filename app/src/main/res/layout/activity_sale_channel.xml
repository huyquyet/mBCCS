<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="presenter"
            type="com.viettel.mbccs.screen.sell.channel.SaleChannelPresenter"
            />
        <import type="android.view.View"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include
            layout="@layout/toolbar"
            app:background="@{@color/colorAccent}"
            app:isShow="@{true}"
            app:leftIcon="@{@drawable/ic_arrow_left_white_24dp}"
            app:leftIconClick="@{()->presenter.onCancel()}"
            app:title="@{@string/sale_channel}"
            app:titleColor="@{@color/white}"
            app:titleTextSize="@{@dimen/sp_17}"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.viettel.mbccs.widget.CustomButton
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/dp_20"
                android:onClick="@{()->presenter.onNext()}"
                android:text="@string/next"
                style="@style/button_positive"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/btn_next"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <include
                        layout="@layout/item_text_filter"
                        app:isShow="@{presenter.isCollapse}"
                        app:onClick="@{()->presenter.onExpand()}"
                        app:text="@{presenter.filterText}"
                        ></include>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:orientation="vertical"
                        android:visibility="@{presenter.isCollapse?View.GONE:View.VISIBLE}"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_5"
                            android:onClick="@{()->presenter.onCollapse()}"
                            android:src="@drawable/collapse"
                            />
                        <com.viettel.mbccs.widget.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="@string/channel_title"
                            />

                        <com.viettel.mbccs.widget.FakeSpinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{()->presenter.chooseChannel()}"
                            android:text="@{presenter.channelText}"
                            />
                        <com.viettel.mbccs.widget.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/service"
                            />
                        <com.viettel.mbccs.widget.SpinnerWithBorder
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adapter="@{presenter.adapter}"
                            />
                        <com.viettel.mbccs.widget.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="@string/sell_program"
                            />
                        <com.viettel.mbccs.widget.FakeSpinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{()->presenter.chooseSellProgram()}"
                            android:text="@{presenter.sellProgram}"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:text="@string/stock_list"
                    />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_10"
                    android:adapter="@{presenter.stockAdapter}"
                    ></android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>