<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="presenter"
            type="com.viettel.mbccs.screen.assignjob.ListAssignJobPresenter"
            />

        <import type="android.view.View"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/search_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4"
            app:cardElevation="@dimen/dp_2"
            >

            <include
                layout="@layout/dump_search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:visibility="@{ presenter.isExpand ? View.GONE : View.VISIBLE }"
                bind:data="@{ presenter }"
                />

            <include
                layout="@layout/layout_job_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{ presenter.isExpand ? View.VISIBLE : View.GONE }"
                bind:presenter="@{ presenter }"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_form"
            android:adapter="@{ presenter.adapter }"
            android:visibility="@{ presenter.isEmpty ? View.GONE : View.VISIBLE }"
            bind:addItemDecoration="@{ presenter.itemDecoration }"
            />

        <View
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_form"
            android:visibility="@{ presenter.isEmpty ? View.VISIBLE : View.GONE }"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:onClick="@{ () -> presenter.onAddClick() }"
            android:src="@drawable/ic_add_white_24dp"
            app:fabSize="auto"
            app:layout_anchor="@id/recyclerView"
            app:layout_anchorGravity="bottom|right|end"
            />

    </RelativeLayout>
</layout>