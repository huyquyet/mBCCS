<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AppButton">
        <attr format="string" name="type"/>
        <attr format="color" name="bgColor"/>
        <attr format="color" name="bgColorSelected"/>
        <attr format="color" name="bgColorDisabled"/>
        <attr format="dimension" name="textSizeButton"/>
        <attr format="color" name="textColorButton"/>
        <attr format="color" name="textColorSelected"/>
        <attr format="color" name="textColorDisabled"/>
        <attr format="dimension" name="corner"/>
        <attr format="boolean" name="selected"/>
        <attr format="dimension" name="cornerStrokeWidth"/>
        <attr format="color" name="cornerStrokeColor"/>
        <attr format="integer" name="bgDrawable"/>
    </declare-styleable>

    <!-- Button Image Custom -->
    <declare-styleable name="ImageTextButton">
        <attr name="itb_icon" format="reference" />
        <attr name="itb_icon_size" format="dimension" />
        <attr name="itb_text" format="string" />
        <attr name="itb_text_color" format="color" />
        <attr name="itb_text_size" format="dimension" />
        <attr name="itb_icon_text_margin" format="dimension" />
        <attr name="itb_icon_position" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="itb_bg" format="color" />
        <attr name="itb_bg_pressed" format="color" />
        <attr name="itb_bg_disabled" format="color" />
        <attr name="itb_radius" format="dimension" />
        <attr name="itb_padding" format="dimension" />
    </declare-styleable>

    <!-- RangeSliderView Custom -->
    <declare-styleable name="RangeSliderView">
        <attr name="rangeCount" format="integer"/>
        <attr name="filledColor" format="color"/>
        <attr name="emptyColor" format="color"/>
        <attr name="barHeightPercent" format="float"/>
        <attr name="slotRadiusPercent" format="float"/>
        <attr name="sliderRadiusPercent" format="float"/>
    </declare-styleable>
</resources>