<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cb_item"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_check_edit_white_24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/cb_item"
        android:orientation="vertical">

        <com.viettel.mbccs.widget.CustomTextView
            android:id="@+id/tv_name_customer"
            style="@style/ItemBillingRecyclerView"
            android:text="Nguyễn Trung Kiên"
            android:textStyle="bold" />

        <com.viettel.mbccs.widget.CustomTextView
            android:id="@+id/tv_phone_number"
            style="@style/ItemBillingRecyclerView"
            android:text="0123456789" />

        <com.viettel.mbccs.widget.CustomTextView
            android:id="@+id/tv_service"
            style="@style/ItemBillingRecyclerView"
            android:text="Tra sau" />

    </LinearLayout>


</RelativeLayout>