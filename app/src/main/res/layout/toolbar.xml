<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>

        <variable
            name="title"
            type="String"
            />
        <variable
            name="titleColor"
            type="int"
            />
        <variable
            name="titleTextSize"
            type="float"
            />
        <variable
            name="leftIcon"
            type="android.graphics.drawable.Drawable"
            />
        <variable
            name="leftIconClick"
            type="android.view.View.OnClickListener"
            />
        <variable
            name="rightIcon"
            type="android.graphics.drawable.Drawable"
            />
        <variable
            name="rightIconClick"
            type="android.view.View.OnClickListener"
            />
        <variable
            name="background"
            type="int"
            />
        <variable
            name="showRightIcon"
            type="boolean"
            />
        <variable
            name="isShow"
            type="boolean"
            />
        <import type="android.view.View"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@{ background }"
        android:visibility="@{ isShow ? View.VISIBLE : View.GONE }"
        >
        <ImageView
            android:id="@+id/image_left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="@{ leftIconClick }"
            android:src="@{ leftIcon }"
            style="@style/IconToolbar"
            />
        <ImageView
            android:id="@+id/image_right"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="@{ rightIconClick }"
            android:src="@{ rightIcon }"
            android:visibility="@{ showRightIcon ? View.VISIBLE : View.GONE }"
            style="@style/IconToolbar"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/image_right"
            android:layout_toStartOf="@id/image_right"
            android:layout_toRightOf="@id/image_left"
            android:layout_toEndOf="@id/image_left"
            android:gravity="center"
            android:text="@{ title }"
            android:textColor="@{ titleColor }"
            android:textSize="@{ titleTextSize }"
            />

    </RelativeLayout>
</layout>
