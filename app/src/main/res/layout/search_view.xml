<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="data"
            type="com.viettel.mbccs.widget.SearchInputView"
            />
    </data>
    <LinearLayout
        android:id="@+id/lyFilterCollapse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_filter_input"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5"
        android:visibility="visible"
        >
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"
            android:src="@drawable/search"
            />
        <EditText
            android:id="@+id/text_filer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:focusable="true"
            android:lines="@{data.lines}"
            android:padding="@dimen/dp_3"
            android:text="@={data.text}"
            android:textColor="@{data.color}"
            android:textSize="@{data.textSize}"
            >
            <requestFocus/>
        </EditText>
    </LinearLayout>
</layout>

