<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="presenter"
            type="com.viettel.mbccs.screen.sellretail.payment.PaymentInfoPresenter"
            />
        />
        <import type="android.view.View"/>
    </data>
    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        >
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="30dp"
                >

                <LinearLayout
                    android:id="@+id/btn_expand_collapse_channelinfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#B7D6AA"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:id="@+id/btnToogleChannel"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:rotation="180"
                        android:src="@drawable/triangle"
                        ></ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/customer_info"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_channel_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:text="@string/customer_name"
                        android:textColor="#000"
                        />

                    <com.viettel.mbccs.widget.CustomEdittext
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="5dp"
                        android:text="@={presenter.name}"
                        android:textColor="#000"
                        android:textSize="18sp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:text="@string/customer_identity"
                        android:textColor="#000"
                        />

                    <com.viettel.mbccs.widget.CustomEdittext
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="5dp"
                        android:text="@={presenter.tin}"
                        android:textColor="#000"
                        android:textSize="18sp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:text="@string/address"
                        android:textColor="#000"
                        />

                    <com.viettel.mbccs.widget.CustomEdittext
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="5dp"
                        android:text="@={presenter.address}"
                        android:textColor="#000"
                        android:textSize="18sp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_expand_collapse_payment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="#B7D6AA"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:id="@+id/btnTooglePayment"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:rotation="180"
                        android:src="@drawable/triangle"
                        />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Thông tin thanh toán"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:text="Hình thức thanh toán"
                        android:textColor="#000"
                        />
                    <RadioGroup
                        android:id="@+id/radio_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:id="@+id/payment_cash"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_payment"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:id="@+id/image_cash"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/tien_mat_select"
                                />
                            <RadioButton
                                android:id="@+id/radio_cash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:clickable="false"
                                android:gravity="center"
                                android:text="Tiền mặt"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/payment_bank_plus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_payment"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:id="@+id/image_bank_plus"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/bank_plus"
                                />
                            <RadioButton
                                android:id="@+id/radio_bank_plus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:clickable="false"
                                android:gravity="center"
                                android:text="Bank plus"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/payment_wellet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_payment"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:id="@+id/image_wellet"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/vi_dien_tu"
                                />
                            <RadioButton
                                android:id="@+id/radio_wellet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:clickable="false"
                                android:gravity="center"
                                android:text="Ví điện tử"
                                />
                        </LinearLayout>
                    </RadioGroup>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:text="Nhập mã coupon"
                        android:textColor="#000"
                        />
                    <com.viettel.mbccs.widget.CustomEdittext
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@={presenter.coupon}"
                        android:textSize="18sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#FD9827"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="@{presenter.isGetTransInfo?View.VISIBLE:View.GONE}"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@={presenter.amountNotTax}"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="@={presenter.tax}"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@={presenter.amount}"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="@={presenter.discount}"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_5"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:padding="1dp"
                        style="@style/button_nagative"
                        >
                        <com.viettel.mbccs.widget.ButtonIconView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="1"
                            view:itb_bg="@color/white"
                            view:itb_bg_pressed="#f3970606"
                            view:itb_icon="@drawable/ic_back"
                            view:itb_icon_position="left"
                            view:itb_radius="3dp"
                            view:itb_text="@string/back"
                            view:itb_text_color="@color/black"
                            style="@style/button_nagative"
                            />
                    </LinearLayout>

                    <com.viettel.mbccs.widget.CustomButton
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:onClick="@{()->presenter.paymentClick()}"
                        android:text="@string/payment"
                        android:textColor="#fff"
                        style="@style/button_positive"
                        />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></FrameLayout>
    </FrameLayout>
</layout>