<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="presenter"
            type="com.viettel.mbccs.screen.trahangcaptren.ListOrderReturnUpperPresenter"
            />

        <import type="android.view.View"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include
            layout="@layout/toolbar"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:background="@{ @android:color/darker_gray }"
            app:isShow="@{ true }"
            app:leftIcon="@{ @drawable/ic_arrow_left_24dp }"
            app:leftIconClick="@{ () -> presenter.onBackPressed() }"
            app:title="@{ presenter.toolbarTitle }"
            app:titleColor="@{ @color/white }"
            app:titleTextSize="@{ @dimen/sp_18 }"
            />

        <com.viettel.mbccs.widget.CustomTextView
            android:id="@+id/text_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="?attr/actionBarSize"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            bind:textUnderLine="@{ presenter.itemCountString }"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text_count"
            android:adapter="@{ presenter.adapter }"
            android:visibility="@{ presenter.isEmpty ? View.GONE : View.VISIBLE }"
            bind:addItemDecoration="@{ presenter.itemDecoration }"
            />

        <View
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text_count"
            android:visibility="@{ presenter.isEmpty ? View.VISIBLE : View.GONE }"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:onClick="@{ () -> presenter.onAddClick() }"
            android:src="@drawable/ic_add_white_24dp"
            android:visibility="@{ presenter.shouldShowAddButton ? View.VISIBLE : View.GONE }"
            app:fabSize="auto"
            app:layout_anchor="@id/recyclerView"
            app:layout_anchorGravity="bottom|right|end"
            />

        <com.viettel.mbccs.widget.MultiDirectionSlidingDrawer
            android:id="@+id/drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            app:content="@+id/search_form"
            app:direction="topToBottom"
            app:handle="@+id/handle"
            app:handleTwo="@+id/view_close"
            app:headerOne="@+id/view_open"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/search_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_4"
                app:cardElevation="@dimen/dp_2"
                >

                <include
                    layout="@layout/repository_base_search_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:adapter="@{ presenter.warehouseAdapter }"
                    bind:titleSpinner="@{ @string/activity_list_order_return_upper_kho_nhan }"
                    bind:titleTime="@{ @string/activity_list_order_return_upper_ngay_lap_phieu }"
                    />
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@id/handle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <include
                    layout="@layout/item_text_filter"
                    android:id="@+id/view_close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:isShow="@{ true }"
                    />

                <FrameLayout
                    android:id="@+id/view_open"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    >
                    <View
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_0.6"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@color/default_text_color_gray"
                        />
                </FrameLayout>
            </RelativeLayout>
        </com.viettel.mbccs.widget.MultiDirectionSlidingDrawer>

    </RelativeLayout>
</layout>