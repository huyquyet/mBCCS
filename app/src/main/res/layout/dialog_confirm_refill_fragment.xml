<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.viettel.mbccs.widget.ToolBarView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tbIconLeft="@drawable/ic_close"
        app:tbTitle="@string/title_confirm" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.viettel.mbccs.widget.ButtonIconView
            android:id="@+id/biv_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            app:itb_bg="@color/blue"
            app:itb_radius="@dimen/default_radius"
            app:itb_text="@string/close" />

        <com.viettel.mbccs.widget.ButtonIconView
            android:id="@+id/biv_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            app:itb_bg="@color/blue"
            app:itb_radius="@dimen/default_radius"
            app:itb_text="@string/title_confirm" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.viettel.mbccs.widget.CustomTextView
            android:id="@+id/tv_trans"
            style="@style/ItemBilling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <com.viettel.mbccs.widget.CustomTextView
                    style="@style/ItemBilling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sell_anypay_label_pre_tax"/>
                <com.viettel.mbccs.widget.CustomTextView
                    android:id="@+id/tv_pre_tax"
                    style="@style/ItemBilling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <com.viettel.mbccs.widget.CustomTextView
                    style="@style/ItemBilling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sell_anypay_refill_label_tax"/>
                <com.viettel.mbccs.widget.CustomTextView
                    android:id="@+id/tv_tax"
                    style="@style/ItemBilling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>
                <com.viettel.mbccs.widget.CustomTextView
                    style="@style/ItemBilling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sell_anypay_label_discount2"/>
                <com.viettel.mbccs.widget.CustomTextView
                    android:id="@+id/tv_discount"
                    style="@style/ItemBilling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <com.viettel.mbccs.widget.CustomTextView
                    style="@style/ItemBilling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sell_anypay_refill_label_total"/>
                <com.viettel.mbccs.widget.CustomTextView
                    android:id="@+id/tv_total"
                    style="@style/ItemBilling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</RelativeLayout>