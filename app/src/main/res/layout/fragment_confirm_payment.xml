<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="presenter"
            type="com.viettel.mbccs.screen.sellretail.payment.PaymentConfirmPresenter"
            />
        <import type="android.text.TextUtils"/>
        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <include
            layout="@layout/toolbar"
            app:background="@{@color/grey}"
            app:isShow="@{true}"
            app:leftIcon="@{@drawable/ic_close}"
            app:leftIconClick="@{() -> presenter.closeClick()}"
            app:titleColor="@{@color/white}"
            app:titleTextSize="@{@dimen/sp_13}"
            ></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/layout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                >
                <Button
                    android:id="@+id/btn_left"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:onClick="@{() -> presenter.closeClick()}"
                    android:text="@{@string/close}"
                    style="@style/button_nagative"
                    />
                <Button
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/btn_left"
                    android:gravity="center"
                    android:onClick="@{() -> presenter.confirmClick()}"
                    android:text="@{@string/confirm}"
                    style="@style/button_positive"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/layout_button"
                android:orientation="vertical"
                android:padding="@dimen/dp_10"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_10"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_17"
                    app:textHtml="@{presenter.content}"
                    />

            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>


</layout>
