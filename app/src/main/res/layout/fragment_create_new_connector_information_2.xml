<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="presenter"
            type="com.viettel.mbccs.screen.connector.fragment.CreateNewConnectorInformationFragmentPresenter"
            />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical"
        >
        <include
            layout="@layout/toolbar"
            android:id="@+id/toolbar_update_information"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            app:background="@{@color/colorAccent}"
            app:isShow="@{true}"
            app:leftIcon="@{@drawable/ic_arrow_left_white_24dp}"
            app:leftIconClick="@{()->presenter.onCancelNewView2()}"
            app:title="@{ @string/create_new_connector_information_title }"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_10"
            >
            <com.viettel.mbccs.widget.CustomTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_6"
                android:layout_weight="1"
                android:background="@drawable/bg_order"
                android:gravity="center"
                android:text="@string/create_new_connector_information_khach_hang"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_right_grey_24_36dp"
                />
            <com.viettel.mbccs.widget.CustomTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_weight="1"
                android:background="@color/grey_three"
                android:gravity="center"
                android:text="@string/create_new_connector_information_thue_bao"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                >
                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/create_new_connector_information_dich_vu"
                    style="@style/textTitleInput"
                    />

                <com.viettel.mbccs.widget.SpinnerWithBorder
                    android:id="@+id/spinner_create_connector_2_dich_vu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:adapter="@{ presenter.adapterSpinner2DichVu }"
                        />
                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/create_new_connector_information_goi_cuoc"
                    style="@style/textTitleInput"
                    />


                <com.viettel.mbccs.widget.SpinnerWithBorder
                    android:id="@+id/spinner_create_connector_2_goi_cuoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    bind:adapter="@{ presenter.adapterSpinner2GoiCuoc }"
                        />

                <com.viettel.mbccs.widget.CustomSelectAddress
                    android:id="@+id/custom_select_address_create_connector_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:address="@{ presenter.address2 }"
                    bind:idDistrict="@{ presenter.idDistrict2 }"
                    bind:idPrecinct="@{ presenter.idPrecinct2 }"
                    bind:idProvince="@{ presenter.idProvince2 }"
                    />


                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/create_new_connector_information_loai_thue_bao"
                    style="@style/textTitleInput"
                    android:layout_marginTop="@dimen/dp_4"
                    />

                <com.viettel.mbccs.widget.SpinnerWithBorder
                    android:id="@+id/spinner_create_connector_2_loai_thue_bao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:adapter="@{ presenter.adapterSpinner2LoaiThueBao }"
                    />

                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/create_new_connector_information_hinh_thuc_hoa_mang"
                    style="@style/textTitleInput"
                    android:layout_marginTop="@dimen/dp_4"
                    />

                <com.viettel.mbccs.widget.SpinnerWithBorder
                    android:id="@+id/spinner_create_connector_2_hinh_thuc_hoa_mang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:adapter="@{ presenter.adapterSpinner2HTHoaMang }"
                    />

                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/create_new_connector_information_so_isdn"
                    style="@style/textTitleInput"
                    android:layout_marginTop="@dimen/dp_4"
                    />

                <com.viettel.mbccs.widget.CustomEditTextInput
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={ presenter.isdn }"
                    android:singleLine="true"
                    bind:error="@{ presenter.isdnError }"
                    />

                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/create_new_connector_information_serial"
                    style="@style/textTitleInput"
                    android:layout_marginTop="@dimen/dp_4"
                    />

                <com.viettel.mbccs.widget.CustomEditTextInput
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={ presenter.serial }"
                    bind:error="@{ presenter.serialError }"
                    />

                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/create_new_connector_information_thong_tin_hang_hoa_di_kem"
                    style="@style/textTitleInput"
                    android:layout_marginTop="@dimen/dp_4"
                    />

                <com.viettel.mbccs.widget.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={ presenter.informationStock }"
                    android:drawableEnd="@drawable/ic_search_black_24dp"
                    android:drawableRight="@drawable/ic_search_black_24dp"
                    style="@style/inputStyle"
                    bind:error="@{ presenter.informationStockError }"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    >

                    <com.viettel.mbccs.widget.CustomButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_weight="1"
                        android:onClick="@{ v -> presenter.onCancelNewView2() }"
                        android:text="@string/create_new_connector_information_back"
                        style="@style/button_nagative_grey_seven"
                        />

                    <com.viettel.mbccs.widget.CustomButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_weight="1"
                        android:onClick="@{ v -> presenter.onEnter() }"
                        android:text="@string/create_new_connector_information_enter"
                        style="@style/button_positive"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
