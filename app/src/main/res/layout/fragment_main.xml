<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="presenter"
            type="com.viettel.mbccs.screen.main.fragments.main.MainFragmentPresenter"
            />
    </data>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        bind:layoutManager="@{ presenter.layoutManager }"
        bind:recyclerAdapter="@{ presenter.recyclerAdapter }"
        bind:spanSizeLookup="@{ presenter.spanSizeLookup }"
        bind:decoration="@{ presenter.recyclerDecoration }"
        />
</layout>