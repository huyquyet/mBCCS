<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="titleColor"
            type="int" />

        <variable
            name="titleTextSize"
            type="float" />

        <variable
            name="leftIcon"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="leftIconClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="rightIcon"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="rightIconClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="background"
            type="int" />

        <variable
            name="showRightIcon"
            type="boolean" />

        <variable
            name="isShow"
            type="boolean" />
        <variable
            name="isAllCaps"
            type="boolean" />

        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@{ background }"
        android:visibility="@{ isShow ? View.VISIBLE : View.GONE }">

        <ImageView
            android:id="@+id/image_left"
            style="@style/IconToolbar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="@{ leftIconClick }"
            android:src="@{ leftIcon }" />

        <ImageView
            android:id="@+id/image_right"
            style="@style/IconToolbar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:onClick="@{ rightIconClick }"
            android:src="@{ rightIcon }"
            android:visibility="@{ showRightIcon ? View.VISIBLE : View.GONE }" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_40"
            android:paddingRight="@dimen/dp_40"
            android:text="@{ title }"
            android:textColor="@{ titleColor }"
            android:textSize="@{ titleTextSize }"
            android:textAllCaps="@{isAllCaps}"/>
    </RelativeLayout>
</layout>
