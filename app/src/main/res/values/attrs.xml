<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- InputText -->
    <declare-styleable name="IncDecInputText">
        <attr name="maxLength" format="integer" />
        <attr name="inputTextSize" format="dimension" />
        <attr name="inputTextColor" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="CustomDatePicker">
        <attr name="dateTextSize" format="dimension" />
        <attr name="dateTextColor" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="BottomNavigationView">
        <attr name="bottomBarBgColor" format="color|reference" />
        <attr name="bottomBarTextSize" format="dimension" />
        <attr name="bottomBarTextColor" format="reference" />
    </declare-styleable>
    <declare-styleable name="SimpleProgressChart">
        <attr name="progressTextColor" format="color|reference" />
        <attr name="progressTextSize" format="dimension" />
        <attr name="progressSize" format="dimension" />
        <attr name="progressDone" format="float" />
        <attr name="progressBgColor" format="integer|reference" />
        <attr name="progressColor" format="integer|reference" />
    </declare-styleable>
    <!--Bordered Spinner-->
    <declare-styleable name="SpinnerWithBorder">
        <attr name="spinnerTintColor" format="color" />
    </declare-styleable>

    <declare-styleable name="AppButton">
        <attr name="type" format="string" />
        <attr name="bgColor" format="color" />
        <attr name="bgColorSelected" format="color" />
        <attr name="bgColorDisabled" format="color" />
        <attr name="textSizeButton" format="dimension" />
        <attr name="textColorButton" format="color" />
        <attr name="textColorSelected" format="color" />
        <attr name="textColorDisabled" format="color" />
        <attr name="corner" format="dimension" />
        <attr name="selected" format="boolean" />
        <attr name="cornerStrokeWidth" format="dimension" />
        <attr name="cornerStrokeColor" format="color" />
        <attr name="bgDrawable" format="integer" />
    </declare-styleable>

    <!-- Button Image Custom -->
    <declare-styleable name="ImageTextButton">
        <attr name="itb_icon" format="reference" />
        <attr name="itb_icon_size" format="dimension" />
        <attr name="itb_text" format="string" />
        <attr name="itb_text_color" format="color" />
        <attr name="itb_text_size" format="dimension" />
        <attr name="itb_icon_text_margin" format="dimension" />
        <attr name="itb_icon_position" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="itb_bg" format="color" />
        <attr name="itb_bg_pressed" format="color" />
        <attr name="itb_bg_disabled" format="color" />
        <attr name="itb_radius" format="dimension" />
        <attr name="itb_padding_bottom" format="dimension" />
        <attr name="itb_padding_top" format="dimension" />
        <attr name="itb_padding_right" format="dimension" />
        <attr name="itb_padding_left" format="dimension" />
    </declare-styleable>

    <!-- RangeSliderView Custom -->
    <declare-styleable name="RangeSliderView">
        <attr name="rangeCount" format="integer" />
        <attr name="filledColor" format="color" />
        <attr name="emptyColor" format="color" />
        <attr name="barHeightPercent" format="float" />
        <attr name="slotRadiusPercent" format="float" />
        <attr name="sliderRadiusPercent" format="float" />
    </declare-styleable>

    <!-- Toolbar View style -->
    <declare-styleable name="ToolbarView">
        <attr name="tbTitle" format="string" />
        <attr name="tbColorTitle" format="color" />
        <attr name="ibSizeTitle" format="dimension" />
        <attr name="tbIconLeft" format="reference" />
        <attr name="tbIconRight" format="reference" />
        <attr name="ibIconSize" format="dimension" />
    </declare-styleable>

    <!-- ItemSpinText -->
    <declare-styleable name="ItemSpinText">
        <attr name="istTextView" format="boolean" />
        <attr name="istTextViewSize" format="dimension" />
        <attr name="istTextViewTitle" format="string" />
        <attr name="istTextViewColor" format="color" />
        <attr name="istSpinner" format="boolean" />
        <attr name="istSpinnerEnable" format="boolean" />
        <attr name="istSpinnerTitle" format="string" />
        <attr name="istIconLeft" format="boolean" />
        <attr name="istIconLeftBg" format="reference" />
        <attr name="istIconRight" format="boolean" />
        <attr name="istIconRightBg" format="reference" />
        <attr name="istContent" format="boolean" />
        <attr name="istContentSize" format="dimension" />
        <attr name="istContentTitle" format="string" />
        <attr name="istContentColor" format="color" />
    </declare-styleable>

    <!-- TopBarView -->
    <declare-styleable name="TopBarView">
        <attr name="tbvTextView" format="boolean" />
        <attr name="tbvIconRight" format="boolean" />
        <attr name="tbvIconRightBg" format="reference" />
        <attr name="tbvTitle" format="string" />
        <attr name="tbvTitleSize" format="dimension" />
        <attr name="tbvTitleColor" format="color" />
    </declare-styleable>

    <!-- ItemTextIcon -->
    <declare-styleable name="ItemTextIcon">
        <attr name="itvTextView" format="boolean" />
        <attr name="itvIconRight" format="boolean" />
        <attr name="itvIconRightBg" format="reference" />
        <attr name="itvTitle" format="string" />
        <attr name="itvTitleSize" format="dimension" />
        <attr name="itvTitleColor" format="color" />
    </declare-styleable>

    <!-- ItemViewArea -->
    <declare-styleable name="ItemViewArea">
        <attr name="ivaTextView" format="boolean" />
        <attr name="ivaIconTop" format="boolean" />
        <attr name="ivaIconTopBg" format="reference" />
        <attr name="ivaTitle" format="string" />
        <attr name="ivaTitleSize" format="dimension" />
        <attr name="ivaTitleColor" format="color" />
    </declare-styleable>

    <!-- SearchViewCustom -->
    <declare-styleable name="SearchViewCustom">
        <attr name="svcOther" format="boolean" />
        <attr name="svcIconClear" format="boolean" />
        <attr name="svcTextOther" format="string" />
        <attr name="svcIconOther" format="reference" />
    </declare-styleable>

    <declare-styleable name="EditSpinner">
        <attr name="hint_text" format="string" />
        <attr name="rightImage" format="reference" />
        <attr name="Background" format="reference" />
    </declare-styleable>

    <!--MyViewPager-->
    <declare-styleable name="MyViewPager">
        <attr name="isDisableSwipe" format="boolean" />
    </declare-styleable>
</resources>