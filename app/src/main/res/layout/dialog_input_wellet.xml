<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="presenter"
            type="com.viettel.mbccs.screen.common.success.DialogInputWellet"
            />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_20"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:text="@string/wellet"
            />

        <com.viettel.mbccs.widget.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text="@string/phone_wellet"
            />

        <com.viettel.mbccs.widget.CustomEdittext
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_input"
            android:padding="@dimen/dp_5"
            android:text="@={presenter.phone}"
            app:error="@{presenter.phoneError}"
            android:textSize="@dimen/sp_12"
            />

        <com.viettel.mbccs.widget.CustomButton
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/ok"
            android:onClick="@{()->presenter.onOkClick()}"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:layout_margin="@dimen/dp_10"
            style="@style/button_positive"
            />
    </LinearLayout>
</layout>