<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="presenter"
            type="com.viettel.mbccs.screen.sell.retail.SaleRetailPresenter"
            />
        <import type="android.view.View"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include
            layout="@layout/toolbar"
            app:background="@{@color/colorAccent}"
            app:isShow="@{true}"
            app:leftIcon="@{@drawable/ic_arrow_left_white_24dp}"
            app:leftIconClick="@{()->presenter.onCancel()}"
            app:title="@{@string/sale_retail}"
            app:titleColor="@{@color/white}"
            app:titleTextSize="@{@dimen/sp_17}"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.viettel.mbccs.widget.CustomButton
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:onClick="@{()->presenter.onNext()}"
                android:text="@string/next"
                style="@style/button_positive"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/btn_next"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <include
                        layout="@layout/item_text_filter"
                        app:isShow="@{presenter.isCollapse}"
                        app:onClick="@{()->presenter.toogleExpand()}"
                        app:text="@{presenter.filterText}"
                        ></include>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:orientation="vertical"
                        android:visibility="@{presenter.isCollapse?View.GONE:View.VISIBLE}"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_5"
                            android:onClick="@{()->presenter.toogleExpand()}"
                            android:src="@drawable/collapse"
                            />

                        <com.viettel.mbccs.widget.CustomTextView
                            android:id="@+id/customTextView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/service"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <com.viettel.mbccs.widget.SpinnerWithBorder
                                android:id="@+id/spinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:adapter="@{presenter.adapter}"
                                />
                        </LinearLayout>
                        <com.viettel.mbccs.widget.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="@string/sell_program"
                            />
                        <!--<RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            style="@style/inputStyle"
                            >
                            <ImageView
                                android:id="@+id/icon_right"
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_12"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/triangle"
                                />
                            <com.viettel.mbccs.widget.CustomEdittext
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/icon_right"
                                android:background="@color/transparent"
                                android:editable="false"
                                android:lines="1"
                                android:onClick="@{()->presenter.chooseSellProgram()}"
                                android:text="@{presenter.sellProgram}"
                                style="@style/inputStyleTranparent"
                                />
                        </RelativeLayout>-->
                        <com.viettel.mbccs.widget.FakeSpinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{()->presenter.chooseSellProgram()}"
                            android:text="@{presenter.sellProgram}"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <com.viettel.mbccs.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:text="@string/stock_list"
                    />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_10"
                    android:adapter="@{presenter.stockAdapter}"
                    ></android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>