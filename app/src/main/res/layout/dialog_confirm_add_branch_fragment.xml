<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.viettel.mbccs.widget.ToolBarView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tbIconLeft="@drawable/ic_close_white_24dp"
        app:tbTitle="@string/title_confirm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/view_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/bottom"
                    android:layout_below="@id/toolbar"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <com.viettel.mbccs.widget.CustomTextView
                        android:id="@+id/tv_trans"
                        style="@style/ItemBilling"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/default_label_text_size"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow>

                            <com.viettel.mbccs.widget.CustomTextView
                                style="@style/ItemBilling"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/default_label_text_size"
                                android:text="@string/branches_add_label_channel_type" />

                            <com.viettel.mbccs.widget.CustomTextView
                                android:id="@+id/tv_channel_type"
                                style="@style/ItemBilling"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/default_label_text_size"/>
                        </TableRow>

                        <TableRow>

                            <com.viettel.mbccs.widget.CustomTextView
                                style="@style/ItemBilling"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/default_label_text_size"
                                android:text="@string/branches_add_label_phone_no" />

                            <com.viettel.mbccs.widget.CustomTextView
                                android:id="@+id/tv_phone_no"
                                style="@style/ItemBilling"
                                android:layout_width="match_parent"
                                android:textSize="@dimen/default_label_text_size"
                                android:layout_height="wrap_content" />
                        </TableRow>

                        <TableRow>

                            <com.viettel.mbccs.widget.CustomTextView
                                style="@style/ItemBilling"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/default_label_text_size"
                                android:text="@string/branches_add_label_document_type" />

                            <com.viettel.mbccs.widget.CustomTextView
                                android:id="@+id/tv_document_type"
                                style="@style/ItemBilling"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/default_label_text_size"/>
                        </TableRow>

                        <TableRow>

                            <com.viettel.mbccs.widget.CustomTextView
                                style="@style/ItemBilling"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/default_label_text_size"
                                android:text="@string/branches_add_label_address" />

                            <com.viettel.mbccs.widget.CustomTextView
                                android:id="@+id/tv_address"
                                style="@style/ItemBilling"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/default_label_text_size"/>
                        </TableRow>

                        <TableRow>

                            <com.viettel.mbccs.widget.CustomTextView
                                style="@style/ItemBilling"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/default_label_text_size"
                                android:text="@string/branches_add_label_location" />

                            <com.viettel.mbccs.widget.CustomTextView
                                android:id="@+id/tv_location"
                                style="@style/ItemBilling"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/default_label_text_size"/>
                        </TableRow>

                        <TableRow>

                            <com.viettel.mbccs.widget.CustomTextView
                                style="@style/ItemBilling"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/default_label_text_size"
                                android:text="@string/branches_add_label_manager" />

                            <com.viettel.mbccs.widget.CustomTextView
                                android:id="@+id/tv_manager"
                                style="@style/ItemBilling"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/default_label_text_size"/>
                        </TableRow>

                        <TableRow>

                            <com.viettel.mbccs.widget.CustomTextView
                                style="@style/ItemBilling"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/default_label_text_size"
                                android:text="@string/branches_add_label_bts" />

                            <com.viettel.mbccs.widget.CustomTextView
                                android:id="@+id/tv_bts"
                                style="@style/ItemBilling"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/default_label_text_size"/>
                        </TableRow>
                    </TableLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.viettel.mbccs.widget.CustomButton
            android:id="@+id/biv_close"
            style="@style/button_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_weight="1"
            android:textSize="@dimen/default_label_text_size"
            android:text="@string/common_label_close" />

        <com.viettel.mbccs.widget.CustomButton
            android:id="@+id/biv_done"
            style="@style/button_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_weight="1"
            android:textSize="@dimen/default_label_text_size"
            android:text="@string/title_confirm" />
    </LinearLayout>
</LinearLayout>