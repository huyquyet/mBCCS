<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.viettel.mbccs.widget.CustomTextView
        android:id="@+id/tv_title"
        style="@style/InstallAddressTv"
        android:text="@string/msg_default_choose_time_trans"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:id="@+id/view_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_item_spin_text"
        android:background="@drawable/bg_border"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_add_black_24dp" />


        <ImageView
            android:id="@+id/iv_icon_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_add_black_24dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_icon_right"
            android:layout_toRightOf="@+id/iv_icon_left">

            <com.viettel.mbccs.widget.CustomTextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start" />

        </FrameLayout>

    </RelativeLayout>
</LinearLayout>